//print name of digits of given number

#include<stdio.h>
#include<math.h>

int say_digit(int n)
{
    //base case
    if(n<=0)
    {
        return 0;
    }
    
    int num = n%10 ;
    n = n/10 ;
    say_digit(n);
    switch(num)
    {
        case 0:
        printf("Zero ");
        break;

        case 1:
        printf("One ");
        break;

        case 2:
        printf("Two ");
        break;

        case 3:
        printf("Three ");
        break;

        case 4:
        printf("Four ");
        break;

        case 5:
        printf("Five ");
        break;

        case 6:
        printf("Six ");
        break;

        case 7:
        printf("Seven ");
        break;

        case 8:
        printf("Eight ");
        break;

        case 9:
        printf("Nine ");
        break;
    
    }
    
}

int main()
{
    int n ;
    printf("enter number:");
    scanf("%d",&n);
    say_digit(n);
    return 0;
}
