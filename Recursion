#include<stdio.h>
#include<stdlib.h>
#include<string.h>


int sum(int *arr,int n)
{
    
    if(n==0)
    {
        return 0;
    }

    if (n==1)
    {
       return arr[1];
        
    }
     
    int s = arr[n]+sum( arr,n-1);
    return s;
}


int main()
{
    int n;
    printf("enter size of array:");
    scanf("%d",&n);
    int arr[100];
    for(int i=1;i<=n;i++)
    {
        scanf("%d",&arr[i]);
    }
    
    int a = sum(arr,n);
    
    printf("sum of given array: %d",a);
    return 0;
}
