#include<stdio.h>
#include<stdlib.h>
#include<string.h>


int binary_search(int *arr,int lower_limit , int upper_limit,int key)
{
    int mid = (lower_limit+upper_limit)/2 ;
    if(lower_limit>upper_limit)
    {
        return 0;
    }
    if(arr[1]!= key)
    {
        return 0;
    }
    if(arr[mid]==key)
    {
        return mid;
    }
    else if (arr[mid]>key)
    {
        binary_search(arr,lower_limit,mid-1,key);
    }
    else
    {
        binary_search(arr,mid+1,upper_limit,key);
    }

}


int main()
{
    int n;
    printf("enter size of array:");
    scanf("%d",&n);
    int arr[100];
    for(int i=1;i<=n;i++)
    {
        scanf("%d",&arr[i]);
    }
    
    int key;
    printf("enter key element:");
    scanf("%d",&key);
    int a = binary_search(arr,1,n,key);
    
    if(a>=1 && a<= n)
    {
        printf("%d is found at: %dth position",key,a);
    }
    else
    {
        printf("%d is not found in given array.",key);
    }
    return 0;
}
