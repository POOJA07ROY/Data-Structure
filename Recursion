#include<stdio.h>
#include<stdlib.h>
#include<string.h>


int linear_search(int *arr,int n,int key)
{
    
    if(arr[n]==key)
    {
        return n;
    }

    linear_search(arr,n-1,key);

}


int main()
{
    int n;
    printf("enter size of array:");
    scanf("%d",&n);
    int arr[100];
    for(int i=1;i<=n;i++)
    {
        scanf("%d",&arr[i]);
    }
    
    int key;
    printf("enter key element:");
    scanf("%d",&key);
    int a = linear_search(arr,n,key);
    
    if(a>=1 && a<= n)
    {
        printf("%d is found at: %dth position",key,a);
    }
    else
    {
        printf("%d is not found in given array.",key);
    }
    return 0;
}
