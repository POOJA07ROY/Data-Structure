//stair_climb_problem.
//give number of ways in which n stairs can be climb by using either 1 or 2 or 3 step jump at a time.

#include<stdio.h>

int stairs(int n)
{
    //base case 1
    if(n<0)
    {
        return 0;
    }
    //base case 2
    if(n == 0)
    {
        return 1;
    }

    // recursive call
    int ans = stairs(n-1)+stairs(n-2)+stairs(n-3);

    return ans;
}


int main()
{
    int n,j;
    printf("enter number of starirs:");
    scanf("%d",&n);
    printf("%d",stairs(n));
}


