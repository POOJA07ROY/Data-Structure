#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int is_sorted(int *arr,int n)
{
    if (n==0 || n==1)
    {
        return 1;
    }
    else if(arr[n-1]<= arr[n])
    {
        is_sorted(arr,n-1);
    }
    else
    {
        return 0 ;
    }
}


int main()
{
    int n;
    printf("enter size of array:");
    scanf("%d",&n);
    int arr[100];
    for(int i=1;i<=n;i++)
    {
        scanf("%d",&arr[i]);
    }
    int a = is_sorted(arr,n);
    if(a==1)
    {
        printf("YES,it is in ascending order.");
    }
    else
    {
        printf("NO,it is not in ascending order.");
    }
    
    return 0;
}
